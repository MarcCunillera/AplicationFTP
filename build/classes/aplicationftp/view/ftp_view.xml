<?xml version="1.0" encoding="UTF-8"?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aplicationftp.controller.FTPController"
      alignment="CENTER" spacing="12" padding="15">

    <HBox spacing="8">
        <Button text="Connectar" onAction="#handleConnect"/>
        <Button text="Pujar Fitxer" onAction="#handleUpload"/>
        <Button text="Descarregar Fitxer" onAction="#handleDownload"/>
    </HBox>

    <TextArea fx:id="output" prefWidth="380" prefHeight="200"/>

</VBox>
